<tpl name="user_reg_register">
    <div id="user_reg_register">
        <div id="sec_reg_reason" style="display: none">
            <div id="reg_msg" class="info"></div>
            <textarea id="inp_r_reg_reason" style="width:100%; height: 50px;"/>
        </div>

        <div class="form-group">
            <label class="control-label">First name:</label>
            <input type="text" id="inp_r_first_name" class="text form-control" events="onenter=onRegisterClick"/>
        </div>
        <div class="form-group">
            <label class="control-label">Last name:</label>
            <input type="text" id="inp_r_last_name" class="text form-control" events="onenter=onRegisterClick"/>
        </div>
        <div class="form-group">
            <label class="control-label">Email:</label>
            <input type="text" id="inp_r_email" class="text form-control" events="onenter=onRegisterClick"/>
        </div>
        <div class="form-group">
            <label class="control-label">Password:</label>
            <input type="password" id="inp_r_pwd" class="text form-control" events="onenter=onRegisterClick"/>
        </div>
        <div class="form-group">
            <label class="control-label">Confirm password:</label>
            <input type="password" id="inp_r_pwd2" class="text form-control" events="onenter=onRegisterClick"/>
        </div>
        <div class="form-group">
            <div style="margin-top: 24px;">
                <img id="reg_captcha_img" class="captcha form-group"/>
                <label class="control-label">Repeat numbers</label>
                <input type="text" id="inp_r_captcha_code" class="text form-control" events="onenter=onRegisterClick" style="width: 80px; display: inline; float:right"/>
            </div>
        </div>
        <div class="form-group">
            <button id="btn_r_submit" class="btn btn-primary submit" events="onclick=onRegisterClick"> Go </button>
        </div>
    </div>
</tpl>